<Window x:Class="CS3280_Group_Project.Items.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS3280_Group_Project.Items"
        mc:Ignorable="d"
        Title="Invoice System" Height="450" Width="800">
    <Grid HorizontalAlignment="Left" Width="792">
        <Grid.Background>
            <SolidColorBrush Color="gray" />
        </Grid.Background>

        <Grid x:Name="MainMenuGrid" Visibility="Hidden">
            <Button x:Name="SearchInvoiceButton" Content="Search for Invoice" Background="white" FontSize="15" Margin="253,83,276,284" Click="SearchForInvoice" />
            <Button x:Name="AddInvoiceButton" Content="Add Invoice" Background="white" FontSize="15" Margin="253,152,276,215" Click="AddInvoice" />
            <Button x:Name="EditInvoiceButton" Content="Edit Invoice" Background="white" FontSize="15" Margin="253,224,276,143" Click="EditInvoice" IsEnabled="False" />
            <Button x:Name="DeleteInvoiceButton" Content="Delete Invoice" Background="white" FontSize="15" Margin="253,296,276,71" Click="DeleteInvoice" IsEnabled="False" />
        </Grid>

        <Grid x:Name="AddInvoiceGrid">
            <Button Content="Save Invoice" Background="white" HorizontalAlignment="Left" Margin="533,293,0,0" VerticalAlignment="Top" Width="95" Height="22"/>
            <Button Content="Add Invoice" Background="white" HorizontalAlignment="Left" Margin="144,137,0,0" VerticalAlignment="Top" Width="128" Height="34"/>
            <Button Content="Edit Invoice" Background="white" HorizontalAlignment="Left" Margin="144,178,0,0" VerticalAlignment="Top" Width="128" Height="34"/>
            <Button Content="Remove Invoice" Background="white" HorizontalAlignment="Left" Margin="144,219,0,0" VerticalAlignment="Top" Width="128" Height="34"/>

            <Label Content="Invoice # 000" Foreground="white" FontSize="20" HorizontalAlignment="Left" Margin="302,63,0,0" VerticalAlignment="Top"/>
            <Label Content="Date: MM/DD/YYYY" Foreground="white" FontSize="20" HorizontalAlignment="Left" Margin="443,63,0,0" VerticalAlignment="Top"/>
            <ListBox HorizontalAlignment="Left" Height="172" Margin="302,105,0,0" VerticalAlignment="Top" Width="326"/>
            <ComboBox HorizontalAlignment="Left" Margin="302,282,0,0" VerticalAlignment="Top" Width="141"/>
            <Label Content="Quantity:" Foreground="white" HorizontalAlignment="Left" Margin="352,306,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.223,0.354"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="415,309,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="28"/>
            <Label Content="Total: $0" Foreground="white" HorizontalAlignment="Left" Margin="352,332,0,0" VerticalAlignment="Top"/>



        </Grid>

        <!--<Grid x:Name="EditInvoiceGrid">
            
        </Grid>

        <Grid x:Name="DeleteInvoiceGrid">
            
        </Grid>
        -->

    </Grid>
</Window>
